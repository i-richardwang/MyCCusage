{
  "name": "ccusage-collector",
  "version": "0.2.0",
  "description": "Local collector for Claude Code usage statistics",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ccusage-collector": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "cli": "tsx src/cli.ts",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "usage",
    "collector",
    "statistics",
    "cli",
    "monitoring",
    "dashboard"
  ],
  "author": "Richard Wang",
  "repository": {
    "type": "git",
    "url": "https://github.com/i-richardwang/MyCCusage.git",
    "directory": "packages/ccusage-collector"
  },
  "bugs": {
    "url": "https://github.com/i-richardwang/MyCCusage/issues"
  },
  "homepage": "https://github.com/i-richardwang/MyCCusage#readme",
  "license": "MIT",
  "packageManager": "pnpm@10.4.1",
  "devDependencies": {
    "@types/node": "^20",
    "@types/node-cron": "^3.0.11",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "commander": "^14.0.0",
    "dotenv": "^17.1.0",
    "node-cron": "^4.2.0"
  }
}
