# Database
DATABASE_URL="postgresql://username:password@localhost:5432/myccusage"

# API Key for ccusage-collector authentication
API_KEY="your-secret-api-key-here"

# App URL for metadata base (used for canonical URLs and SEO)
# Set this to your deployed app URL, e.g., https://myccusage.example.com
NEXT_PUBLIC_APP_URL="https://myccusage.example.com"

# Owner name for personalized dashboard title (optional)
# If set, displays "Your Name's Coding Usage Dashboard"
# If not set, displays "Coding Usage Dashboard"
NEXT_PUBLIC_OWNER_NAME="Your Name"

# Billing Cycle Configuration
# Date when your Claude subscription/billing cycle started (YYYY-MM-DD format)
# For example: '2025-06-01' means billing cycle runs from 4th of each month to 3rd of next month
CLAUDE_BILLING_CYCLE_START_DATE='2025-06-01'

# Subscription Plan Configuration
# Your Claude subscription plan tier: 100 (Max $100/month) or 200 (Max $200/month)
NEXT_PUBLIC_SUBSCRIPTION_PLAN='200'